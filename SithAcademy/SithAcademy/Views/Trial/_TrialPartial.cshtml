@model TrialSortingViewModel

<div class="col-md-4">
    <div class="card mb-3">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>(@(Model.IsLocked ? "Locked" : "Not locked"))</h6>

            <a asp-area="" asp-controller="Trial" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">View Details</a>
            <a asp-area="" asp-controller="Trial" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Trial</a>
        </div>
    </div>
</div>